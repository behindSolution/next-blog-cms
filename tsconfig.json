{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "types": [
      "node",
      "react"
    ]
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "tsup.config.ts",
    "tailwind.config.ts"
  ]
}

